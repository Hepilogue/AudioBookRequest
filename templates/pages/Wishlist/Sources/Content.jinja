{#def
    result: QueryResult,
#}

{% set book_id = result.book.id if result.book.id is defined else result.book.asin %}
{% set is_manual = result.book.id is defined %}

<div class="w-screen p-2 md:p-4 lg:p-8 flex flex-col gap-2" id="sources">
    <a preload
       href="{{ base_url }}/wishlist{% if is_manual %}/manual{% endif %}#{{ book_id }}"
       class="w-fit btn btn-ghost">&lt; Back to wishlist</a>
    <h1 class="text-3xl font-bold">
        Sources for {{ result.book.title }}
    </h1>
    {% if result.ok and not result.sources %}
        <div role="alert" class="alert">
            <span class="stroke-info h-6 w-6 shrink-0">
                <icons.InfoCircle />
            </span>
            <span>No results found for "{{ result.book.title }}" by
                {{ result.book.authors|join(",") }}. Might have to be looked up
            manually.</span>
        </div>
    {% elif not result.ok %}
        <div role="alert"
             class="alert"
             hx-get="{{ base_url }}/wishlist/sources/{{ book_id }}?only_body=true"
             hx-trigger="load"
             hx-target="#sources"
             hx-swap="outerHTML">
            <span class="stroke-info h-6 w-6 shrink-0">
                <icons.InfoCircle />
            </span>
            <span>Fetching sources from prowlarr
                <span class="ml-2 loading loading-dots"></span>
            </span>
        </div>
    {% endif %}
    <div class="overflow-x-auto">
        <table class="table table-zebra table-pin-rows min-w-240">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Author(s)</th>
                    <th>Narrator(s)</th>
                    <th>Indexer</th>
                    <th>Flags</th>
                    <th>Seeds / Leeches</th>
                    <th>Size (MB)</th>
                    <th>Published</th>
                    <th>Download</th>
                </tr>
            </thead>
            <tbody>
                {% for source in (result.sources or []) %}
                    <tr class="text-xs lg:text-sm {% if loop.index==1 %}bg-success/20{% endif %}">
                        <th>
                            {% if loop.index == 1 %}
                                <span class="badge badge-success badge-sm">Best</span>
                            {% else %}
                                {{ loop.index }}
                            {% endif %}
                        </th>
                        <td>
                            {% if source.info_url %}
                                <a href="{{ source.info_url }}" class="link">{{ source.title }}</a>
                            {% else %}
                                {{ source.title }}
                            {% endif %}
                        </td>
                        <td>
                            {% if source.book_metadata.authors %}
                                {{ source.book_metadata.authors|join(", ") }}
                            {% endif %}
                        </td>
                        <td>
                            {% if source.book_metadata.narrators %}
                                {{ source.book_metadata.narrators|join(", ") }}
                            {% endif %}
                        </td>
                        <td>
                            {{ source.indexer }}
                        </td>
                        <td>
                            {% if source.indexer_flags %}
                                {% for flag in source.indexer_flags %}
                                    <span class="badge badge-outline badge-sm">{{ flag }}</span>
                                {% endfor %}
                            {% endif %}
                        </td>
                        {% if source.protocol == "torrent" %}
                            <td>
                                <span class="text-success font-medium">{{ source.seeders }}</span>
                                <span class="opacity-50"> / {{ source.leechers }}</span>
                            </td>
                        {% else %}
                            <td>{{ source.grabs }} grabs</td>
                        {% endif %}
                        <td>{{ source.size_MB }}</td>
                        <td>{{ source.publish_date.strftime("%d %b %Y") }}</td>
                        <td>
                            <label id="form-{{ loop.index }}"
                                   class="swap swap-flip btn btn-sm btn-primary"
                                   title="Send to download client">
                                <input id="checkbox-{{ loop.index }}"
                                       type="checkbox"
                                       hx-trigger="click"
                                       hx-target="this"
                                       hx-post="{{ base_url }}/wishlist/sources/{{ book_id }}"
                                       hx-include="#form-{{ loop.index }}"
                                       hx-on::after-request="if (event.detail.successful) this.disabled = true" />
                                <input type="hidden" name="indexer_id" value="{{ source.indexer_id }}" />
                                <input type="hidden" name="guid" value="{{ source.guid }}" />
                                <span class="swap-off flex items-center gap-1">
                                    <icons.Download />
                                    <span class="hidden sm:inline">Download</span>
                                </span>
                                <span class="swap-on flex items-center gap-1">
                                    <icons.Checkmark />
                                    <span class="hidden sm:inline">Sent!</span>
                                </span>
                            </label>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
